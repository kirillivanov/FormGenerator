<%= simple_form_for @test_model, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= f.input :age %>
  <%= f.input :birthday %>
  <%= f.input :city %>
  <%= f.input :country %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                test_models_path, :class => 'btn' %>
  </div>
<% end %>
