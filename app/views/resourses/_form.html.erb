<%= simple_form_for @resourse, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name, collection: get_list_of_models %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                resourses_path, :class => 'btn' %>
  </div>
<% end %>
