<h2>Sign up</h2>
<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <div><%= f.input :email, placeholder: "email" %></div>

  <div><%= f.input :password, placeholder: "password" %></div>

  <div><%= f.input :password_confirmation, placeholder: "password confirmation" %></div>

  <div><%= f.button :submit, "Sign up", class: "btn-primary" %></div>
<% end %>

