- model_class = @option.class
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @option.name
%p
  %strong= model_class.human_attribute_name(:value) + ':'
  %br
  = @option.value
%p
  %strong= model_class.human_attribute_name(:field_id) + ':'
  %br
  = @option.field_id

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), options_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_option_path(@option), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), option_path(@option), :method => "delete", :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-danger'
