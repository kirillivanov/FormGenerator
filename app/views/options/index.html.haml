- model_class = Option.new.class
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:value)
      %th= model_class.human_attribute_name(:field_id)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @options.each do |option|
      %tr
        %td= link_to option.id, option_path(option)
        %td= option.name
        %td= option.value
        %td= option.field_id
        %td=l option.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_option_path(option), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), option_path(option), :method => :delete, :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_option_path, :class => 'btn btn-primary'
