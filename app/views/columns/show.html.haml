- model_class = @column.class
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @column.name
%p
  %strong= model_class.human_attribute_name(:resourse_id) + ':'
  %br
  = @column.resourse.name

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), columns_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_column_path(@column), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), column_path(@column), :method => "delete", :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-danger'
