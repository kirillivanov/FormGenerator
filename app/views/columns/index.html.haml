- model_class = Column.new.class
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:resourse_id)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @columns.each do |column|
      %tr
        %td= column.id
        %td= link_to column.name, column_path(column)
        %td= column.resourse.name
        %td=l column.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_column_path(column), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), column_path(column), :method => :delete, :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_column_path, :class => 'btn btn-primary'
