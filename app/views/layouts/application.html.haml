%html
  %head
    = render'shared/meta'
  %body(class='container') 
    = render 'shared/nav'
    - flash.each do |name, msg|
      %div{ class: "row alert alert-#{ name == :notice ? "success" : "error" }" }
        %a(class="close" data-dismiss="alert" href="#")
          ×
        = msg
    #nav_and_login.row
      #logout
        = render 'shared/auth'
      -if user_signed_in?
        #navigation
    #content.row
      = yield
    #footer.row(style="text-align: center;")
      copyright © 2012 kirillivanov.ru
      %br