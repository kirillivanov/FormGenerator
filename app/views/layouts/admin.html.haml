%html
  %head
    = render'shared/meta'
  %body(class='container')
    #notification(class="row")
      %span(class="alert alert-error")
        = alert
      %span(class="alert alert-info")
        = notice
    #nav_and_login(class="row")
      #logout
        = render 'shared/auth'
      -if user_signed_in?
        #navigation

        #content
          = yield
          =# custom_form({object: Form, fields: [["text", "value"], ["select", "value1_|_value2_|_value3"], ["text", "value"]]})
      #footer
        copyright Â© 2012 kirillivanov.ru
        %br
        =# controller_name 
        =# action_name
        =# debug params