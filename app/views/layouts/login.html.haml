!!!
%html
  %head
    = render'shared/meta'
  %body(class='container')  
    .navbar.row
      .navbar-inner
        .container
          = link_to "FormGenerator", root_path, class: "brand"
          - if user_signed_in? 
            .nav-collapse
              %ul.nav
                %li
                  = link_to "Forms", forms_path
                %li
                  = link_to "Fields", fields_path
              %ul.nav.pull-right
                %li
                  = link_to("Log out", destroy_user_session_path)
    - flash.each do |name, msg|
      .row{ class: "alert alert-#{ name == :notice ? "success" : "error" }" }
        %a(class="close" data-dismiss="alert" href="#")
          ×
        = msg
    #nav_and_login.row
      #logout
        = render 'shared/auth'
      -#if user_signed_in?

    #content
      =# custom_form({object: Form, fields: [["text", "value"], ["select", "value1_|_value2_|_value3"], ["text", "value"]]})
    #footer.row(style="text-align: center;")
      copyright © 2012 kirillivanov.ru
      %br
      =# controller_name 
      =# action_name
      =# debug params